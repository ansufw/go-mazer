package pages

import (
	"github.com/ansufw/go-mazer/apps/web/data"
    "github.com/ansufw/go-mazer/views/layouts"
)

templ Error403(td data.TemplData) {
    @layouts.ErrorLayout("403") {
        <div class="error-page container">
            <div class="col-md-8 col-12 offset-md-2">
                <div class="text-center">
                    <img class="img-error" src="assets/static/images/samples/error-403.svg" alt="Forbidden"/>
                    <h1 class="error-title">Forbidden</h1>
                    <p class="fs-5 text-gray-600">You are unauthorized to see this page.</p>
                    <a href="index" class="btn btn-lg btn-outline-primary mt-3">Go Home</a>
                </div>
            </div>
        </div>
    }
}
